#include <iostream>
#include <fstream>
using namespace std;

int main() {
    const int width = 100;
    const int height = 100;
    const int stripeHeight = 10; // height of each stripe in pixels

    ofstream outFile("stripes.ppm");
    if (!outFile) {
        cerr << "Error opening file!" << endl;
        return 1;
    }

    // PPM header
    outFile << "P3\n" << width << " " << height << "\n255\n";

    // Generate horizontal stripes
    for (int y = 0; y < height; y++) {
        for (int x = 0; x < width; x++) {
            bool isPink = ((y / stripeHeight) % 2 == 0); // alternate colors
            int r = isPink ? 255 : 128;
            int g = isPink ? 192 : 0;
            int b = isPink ? 203 : 128;
            outFile << r << " " << g << " " << b << " ";
        }
        outFile << "\n";
    }

    outFile.close();
    cout << "stripes.ppm generated successfully!" << endl;
    return 0;
}
