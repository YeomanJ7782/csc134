#include <iostream>
#include <fstream>
using namespace std;

int main() {
    const int width = 100;
    const int height = 100;

    ofstream outFile("gradient.ppm");
    if (!outFile) {
        cerr << "Error opening file!" << endl;
        return 1;
    }

    // PPM header
    outFile << "P3\n" << width << " " << height << "\n255\n";

    // Generate diagonal gradient
    for (int y = 0; y < height; y++) {
        for (int x = 0; x < width; x++) {
            int r = 255; // red stays constant
            int g = 192; // green stays constant
            int b = 203 - ((x + y) * 203 / (width + height - 2)); // decrease blue diagonally
            outFile << r << " " << g << " " << b << " ";
        }
        outFile << "\n";
    }

    outFile.close();
    cout << "gradient.ppm generated successfully!" << endl;
    return 0;
}
